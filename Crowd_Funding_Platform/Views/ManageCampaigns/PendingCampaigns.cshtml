@model List<Crowd_Funding_Platform.Models.CreatorApplication>

@{
    ViewData["Title"] = "Pending Creator Requests";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    .bg-purple {
        background-color: #6a0dad !important;
    }

    .text-purple {
        color: #6a0dad !important;
    }

    .btn-purple {
        background-color: #b66dff;
        color: #fff;
        border: none;
    }

        .btn-purple:hover {
            background-color: #8e44ad;
        }

    .status-badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 20px;
        font-weight: bold;
        color: #fff;
        text-transform: capitalize;
    }

    .status-pending {
        background-color: #ffc107;
    }

    .status-approved {
        background-color: #28a745;
    }

    .status-rejected {
        background-color: #dc3545;
    }

    .table th, .table td {
        vertical-align: middle !important;
    }
</style>

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-lg p-4 bg-light">
        <h3 class="text-center text-purple mb-4 font-weight-bold">Pending Creator Requests</h3>

        <table class="table table-hover table-bordered text-center">
            <thead class="bg-purple text-white">
                <tr>
                    <th>Application ID</th>
                    <th>Creator</th>
                    <th>Document Type</th>
                    <th>Status</th>
                    <th>Submission Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var campaign in Model)
                {
                    <tr>
                        <td>@campaign.ApplicationId</td>
                        <td>@campaign.User.Username</td>
                        <td>@campaign.DocumentType</td>
                        <td>
                            <span class="status-badge status-@campaign.Status.ToLower()">@campaign.Status</span>
                        </td>
                        <td>@campaign.SubmissionDate?.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a href="@Url.Action("PendingCampaignsDetails", "ManageCampaigns", new { id = campaign.ApplicationId })" class="btn btn-sm btn-purple">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

