@model Crowd_Funding_Platform.Models.Campaign
@{
    ViewData["Title"] = Model?.CampaignId > 0 ? "Edit Campaign" : "Create Campaign";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}
<h4>Campaign</h4>
<div class="row">
    <div class="col-md-4">

    <form id="campaignForm" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="CampaignId" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Requirement">Goal Amount</label>
        <input asp-for="Requirement" type="number" step="0.01" class="form-control"  />
    </div>

  @*   <div class="form-group">
        <label asp-for="RaisedAmount">Contribution Amount</label>
        <input asp-for="RaisedAmount" class="form-control" min="1" placeholder="Enter minimum contribution" placeholder="Enter target amount">
    </div>
 *@
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control"  />
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control"  />
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
            <option value="">Select Category</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="MediaUrl" class="control-label">Media</label>
        <input asp-for="ImageFile" class="form-control" id="MediaFile" />
    </div>

            <button type="submit" class="btn btn-primary">
                @((Model?.CampaignId ?? 0) > 0 ? "Update" : "Create")
            </button>

        </form>


    </div>
</div>

