@model Crowd_Funding_Platform.Models.Campaign
@{
    ViewData["Title"] = Model?.CampaignId > 0 ? "Edit Campaign" : "Create Campaign";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}

<style>
    body {
        font-family: 'Nunito', sans-serif;
    }

    .card {
        font-family: 'Nunito', sans-serif;
    }
</style>

<link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600&display=swap" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-lg p-4">
        <h3 class="text-center text-primary mb-4">@ViewData["Title"]</h3>
        <form id="campaignForm" enctype="multipart/form-data" method="post">
            <input type="hidden" asp-for="CampaignId" />

            <div class="row">
                <!-- Left Column -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Title" class="form-label fw-bold">Campaign Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Enter campaign title" required />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Requirement" class="form-label fw-bold">Goal Amount ($)</label>
                        <input asp-for="Requirement" type="number" step="0.01" class="form-control" placeholder="Enter goal amount" required />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="StartDate" class="form-label fw-bold">Start Date</label>
                        <input asp-for="StartDate" type="date" class="form-control" required />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="EndDate" class="form-label fw-bold">End Date</label>
                        <input asp-for="EndDate" type="date" class="form-control" required />
                    </div>
                </div>

                <!-- Right Column -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="CategoryId" class="form-label fw-bold">Category</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories" required>
                            <option value="">Select Category</option>
                        </select>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="MediaUrl" class="form-label fw-bold">Upload Media</label>
                        <input asp-for="ImageFile" type="file" class="form-control" id="MediaFile" accept="image/*,video/*" required />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label fw-bold">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe your campaign" required></textarea>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg px-4">
                    <i class="fas fa-save"></i> @((Model?.CampaignId ?? 0) > 0 ? "Edit Campaign" : "Create Campaign")
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<script src="/js/savecampaignform.js"></script>

 

}