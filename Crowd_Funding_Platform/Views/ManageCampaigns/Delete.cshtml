@model Crowd_Funding_Platform.Models.Campaign

@{
    ViewData["Title"] = "Delete Campaign";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="fas fa-trash-alt"></i> Delete Campaign</h3>
        </div>

        <div class="card-body">
            <h4 class="text-center text-danger">Are you sure you want to delete this campaign?</h4>
            <hr class="mb-4">

            <div class="row mb-4">
                <div class="col-md-6">
                    <strong>Title:</strong>
                    <p class="text-muted">@Html.DisplayFor(model => model.Title)</p>
                </div>
                <div class="col-md-6">
                    <strong>Description:</strong>
                    <p class="text-muted">@Html.DisplayFor(model => model.Description)</p>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <strong>Requirement:</strong>
                    <p class="text-muted">@Html.DisplayFor(model => model.Requirement)</p>
                </div>
                <div class="col-md-6">
                    <strong>Raised Amount:</strong>
                    <p class="text-muted">@Html.DisplayFor(model => model.RaisedAmount)</p>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <strong>Start Date:</strong>
                    <p class="text-muted">@Html.DisplayFor(model => model.StartDate)</p>
                </div>
                <div class="col-md-6">
                    <strong>End Date:</strong>
                    <p class="text-muted">@Html.DisplayFor(model => model.EndDate)</p>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <strong>Status:</strong>
                    <p class="text-muted">@Html.DisplayFor(model => model.Status)</p>
                </div>
                <div class="col-md-6">
                    <strong>Category:</strong>
                    <p class="text-muted">@Html.DisplayFor(model => model.Category.CategoryId)</p>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <strong>Creator:</strong>
                    <p class="text-muted">@Html.DisplayFor(model => model.Creator.UserId)</p>
                </div>
                <div class="col-md-6">
                    <strong>Media:</strong>
                    <div>
                        @if (!string.IsNullOrEmpty(Model.MediaUrl))
                        {
                            <img src="@Model.MediaUrl" alt="Campaign Media" class="img-fluid rounded shadow-sm" style="max-width: 100%; height: auto;" />
                        }
                        else
                        {
                            <p class="text-muted">No media available</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer text-end">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="CampaignId" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="fas fa-trash"></i> Delete
                </button>
            </form>

            <a asp-action="CampaignsList" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>


