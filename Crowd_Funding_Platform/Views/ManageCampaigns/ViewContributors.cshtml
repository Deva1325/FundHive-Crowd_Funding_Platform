@model List<Crowd_Funding_Platform.Models.Contribution>

@{
    ViewData["Title"] = "View Contributors";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary mb-3">Contributors for: <span class="text-dark">@ViewBag.CampaignTitle</span></h2>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive shadow p-4 bg-white rounded border">
            <table class="table table-bordered table-striped">
                <thead class="table-dark text-center">
                    <tr>
                        <th>Contributor</th>
                        <th>Email</th>
                        <th>Transaction ID</th>
                        <th>Amount (₹)</th>
                        <th>Contributed On</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="align-middle text-center">
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    @if (!string.IsNullOrEmpty(item.Contributor.ProfilePicture))
                                    {
                                        <img src="@item.Contributor.ProfilePicture" alt="Profile" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary text-white rounded-circle d-flex justify-content-center align-items-center" style="width: 40px; height: 40px;">
                                            <span>@item.Contributor.Username?[0]</span>
                                        </div>
                                    }
                                    <span class="fw-semibold">@item.Contributor.Username</span>
                                </div>
                            </td>
                            <td>@item.Contributor.Email</td>
                            <td>@item.TransactionId</td>
                            <td><strong>₹@item.Amount</strong></td>
                            <td>@item.Date?.ToString("dd MMM yyyy hh:mm tt")</td>
                            <td>
                                <span class="badge rounded-pill @(item.Status == "Confirmed" ? "bg-success" : "bg-warning text-dark")">
                                    @item.Status
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info shadow-sm">
            No contributors found for this campaign.
        </div>
    }
</div>


