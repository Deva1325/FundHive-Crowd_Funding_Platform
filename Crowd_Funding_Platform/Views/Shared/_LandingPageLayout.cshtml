        }

        // 🟢 DOM-dependent code stays inside DOMContentLoaded
        document.addEventListener("DOMContentLoaded", function () {
            const toggle = document.getElementById("dpDropdownToggle");
            const menu = document.getElementById("dpDropdownMenu");
            const container = document.getElementById("dpContainer");

            let hoverTimeout;

            container?.addEventListener("mouseenter", () => {
                clearTimeout(hoverTimeout);
                menu?.classList.add("show");
            });

            container?.addEventListener("mouseleave", () => {
                hoverTimeout = setTimeout(() => {
                    menu?.classList.remove("show");
                }, 200);
            });

            toggle?.addEventListener("click", (e) => {
                e.preventDefault();
                menu?.classList.toggle("show");
            });
        });
    </script>

