@using System.Globalization
@{
    var indianCulture = new CultureInfo("en-IN");
}
@model Crowd_Funding_Platform.Models.HomePageViewModel
@{
    <title>@ViewData["Title"] - Crowd_Funding_Platform</title>
   //  Layout = "~/Views/Shared/_mainLayout.cshtml";
     Layout = "~/Views/Shared/_LandingPageLayout.cshtml";

}

<style>
    /* Make all cards the same height */
    .properties {
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    /* Ensure the card content fills the height equally */
    .properties-card {
        display: flex;
        flex-direction: column;
        height: 100%;
        justify-content: space-between;
        border: 1px solid #eee;
        border-radius: 8px;
        overflow: hidden;
        background-color: #fff;
    }

    /* Fix inconsistent image height */
    .properties-img img {
        height: 250px;
        width: 100%;
        object-fit: cover;
    }

    /* Set fixed height for title + description area */
    .properties-caption {
        padding: 10px 15px;
        min-height: 100px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    /* Smaller donate button */
    .properties-footer .btn {
        padding: 5px -1px;
        font-size: 14px;
        border-radius: 20px;
    }

    /* Tidy up amount spacing and reduce size */
    .properties-footer span.color-font1,
    .properties-footer span.color-font2 {
        font-size: 14px;
        font-weight: 600;
        display: block;
        line-height: 1.2;
    }

    /* Align footer elements nicely */
    .properties-footer {
        padding: 10px 15px 15px 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    /* Keep equal height across all cards */
    .services1-active .col-lg-4 {
        display: flex;
        flex-direction: column;
    }

</style>

<main>
    <!-- slider Area Start-->
    <div class="slider-area position-relative">
        <div class="slider-active dot-style">
            <!-- Single Slider -->
            <div class="single-slider hero-overly slider-height slider-bg1 d-flex align-items-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xxl-6 col-xl-7 col-lg-7 col-md-8 col-sm-10">
                            <div class="hero-caption">
                                <h1 data-animation="fadeInUp" data-delay=".2s">Launch Your Dream Campaign</h1>
                                <P data-animation="fadeInUp" data-delay=".4s">
                                    Turn your ideas into reality with the power of crowdfunding.
                                </P>
                                <a href="~/ManageCampaigns/ShowCampaignCases" class="btn hero-btn" data-animation="fadeInUp" data-delay=".8s">Total Cases</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Single Slider -->
            <div class="single-slider hero-overly01  slider-height slider-bg2 d-flex align-items-center">
                <div class="container">
                    <div class="row justify-content-end">
                        <div class="col-xxl-6 col-xl-7 col-lg-7 col-md-8 col-sm-10">
                            <div class="hero-caption">
                                <h1 data-animation="fadeInUp" data-delay=".2s">Support Causes That Matter</h1>
                                <P data-animation="fadeInUp" data-delay=".4s">
                                    Contribute to campaigns and make a real impact in lives.
                                </P>
                                <a href="~/ManageCampaigns/ShowCampaignCases" class="btn hero-btn" data-animation="fadeInUp" data-delay=".8s">Active Cases</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Single Slider -->
            <div class="single-slider hero-overly slider-height slider-bg3 d-flex align-items-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xxl-6 col-xl-7 col-lg-7 col-md-8 col-sm-10">
                            <div class="hero-caption">
                                <h1 data-animation="fadeInUp" data-delay=".2s">Get Rewarded for Giving</h1>
                                <P data-animation="fadeInUp" data-delay=".4s">
                                    Receive exclusive rewards and recognition for your support.
                                </P>
                                <a href="~/ManageCampaigns/ShowCampaignCases" class="btn hero-btn" data-animation="fadeInUp" data-delay=".8s">Active Cases</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- slider Area End-->
    <!-- Services Start 01 -->
    <div class="services-area1 section-padding">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10 col-sm-11">
                    <!-- Section Tittle -->
                    <div class="section-tittle text-center mb-60">
                        <h2>Causes we are serving</h2>
                    </div>
                </div>
            </div>
            <div class="services1-active row">
                @foreach (var item in Model.Campaigns)
                {
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <!-- Single -->
                        <div class="properties pb-30">
                            <div class="properties-card">
                                <div class="properties-img">
                                    <a href="#"><img src="@item.MediaUrl" alt="@item.Title" style="height: 250px; width: 100%; object-fit: cover;font-size : 20px;" /></a>

                                    <!-- Progress Bar -->
                                    @{
                                        var percentage = item.RaisedAmount.HasValue && item.Requirement > 0
                                        ? (int)((item.RaisedAmount.Value / item.Requirement) * 100)
                                        : 0;
                                    }
                                    <div class="single-skill">
                                        <div class="bar-progress">
                                            <div class="barfiller">
                                                <div class="tipWrap">
                                                    <span class="tip">@percentage%</span>
                                                </div>
                                                <span class="fill" data-percentage="@percentage"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- / progress -->
                                </div>
                                <div class="wrap-wrapper">
                                    <div class="properties-caption">
                                        <h3><a href="#">@item.Title</a></h3>
                                        @* <p>@item.Description</p> *@
                                    </div>
                                    <div class="properties-footer d-flex justify-content-between align-items-center">
                                        <div class="class-day">
                                            <a href="~/ManageCampaigns/DetailCampaignCases/@item.CampaignId" class="btn" style="padding:17px 14px !important;">Donate</a>
                                        </div>
                                        <div class="class-day">
                                            <span class="color-font2" style="font-size : 13px !important">@item.Requirement.ToString("C", indianCulture)</span>
                                            <p>Goal</p>
                                        </div>
                                        <div class="class-day">
                                            <span class="color-font1">
                                                @(item.RaisedAmount.HasValue
                                                    ? item.RaisedAmount.Value.ToString("C", indianCulture)
                                                    : "₹0.00")
                                            </span>
                                            <p>Raised</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
    <!-- Services End -->
    <!-- About -->
    <div class="support-company-area section-padding">
        <div class="container">
            <div class="row align-items-center justify-content-between">
                <div class="col-xl-6 col-lg-6 col-md-10">
                    <div class="support-location-img">
                        <img src="~/assets/img/gallery/about.jpg" alt="About FundHive">
                    </div>
                </div>
                <div class="col-xl-5 col-lg-6 col-md-10">
                    <div class="right-caption">
                        <!-- Section Tittle -->
                        <div class="section-tittle">
                            <h2>Who We Are</h2>
                        </div>
                        <div class="support-caption">
                            <p class="mb-10">
                                FundHive is a dynamic web-based crowdfunding platform designed to empower individuals and communities by providing them with a secure, transparent, and user-friendly space to raise funds for personal, social, medical, and emergency causes.
                            </p>
                            <p class="pera-top">
                                Whether you're supporting a friend in need, backing a social cause, or launching a personal campaign, FundHive offers seamless campaign management, donor engagement tools, and reward-based incentives to inspire meaningful contributions. Our mission is to connect people through compassion, simplify giving, and create impact — one campaign at a time.
                            </p>
                            <a href="/Home/About" class="btn about-btn">Learn More</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- About Area End-->
    <!-- Count Down Start -->
    <div class="count-down-area pt-25 section-img-bg2" data-background="@Url.Content("~/assets/img/gallery/section-bg1.jpg")">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12 col-md-12">
                    <div class="count-down-wrapper">
                        <div class="row justify-content-between">
                            <div class="col-lg-3 col-md-6 col-sm-6">
                                <div class="single-counter d-flex align-items-center">
                                    <div class="counter-img">
                                        <img src="~/assets/img/icon/count-icon1.svg" alt="">
                                    </div>
                                    <div class="captions">
                                        <span class="counter">@ViewBag.Totals.TotalCampaigns</span>
                                        <span class="plus">+</span>
                                        <p class="color-green">Active Cases</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6 col-sm-6">
                                <div class="single-counter d-flex align-items-center">
                                    <div class="counter-img">
                                        <img src="~/assets/img/icon/count-icon2.svg" alt="">
                                    </div>
                                    <div class="captions">
                                        <span class="counter">@ViewBag.Totals.TotalUsers</span>
                                        <p class="color-green">Supporters Joined</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6 col-sm-6">
                                <div class="single-counter d-flex align-items-center">
                                    <div class="counter-img">
                                        <img src="~/assets/img/icon/count-icon3.svg" alt="">
                                    </div>
                                    <div class="captions">
                                        <span class="counter">@ViewBag.Totals.TotalContributions</span>
                                        <p class="color-green">Total Donations</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6 col-sm-6">
                                <div class="single-counter d-flex align-items-center">
                                    <div class="counter-img">
                                        <img src="~/assets/img/icon/count-icon4.svg" alt="">
                                    </div>
                                    <div class="captions">
                                        <span class="counter">@ViewBag.Totals.TotalRaisedAmount</span>
                                        <p class="color-green">Funds Raised (INR)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Count Down End -->
    <!-- Our Services Start -->
    <!-- Our Services Start -->
    <div class="our-services section-padding position-relative">
        <div class="container">
            <div class="row justify-content-sm-center">
                <div class="col-xl-7 col-lg-8 col-md-11">
                    <!-- Section Tittle -->
                    <div class="section-tittle text-center mb-70">
                        <h2>Empowering Causes, Impacting Lives</h2>
                        <p>We provide tools and technology to help people raise funds for real-life causes — from medical emergencies to education, and community development to social impact.</p>
                    </div>
                </div>
            </div>
            <div class="row justify-content-between">
                <div class="col-xxl-3 col-xl-4 col-lg-4 col-md-6 col-sm-6">
                    <div class="single-services text-center mb-30">
                        <div class="services-icon">
                            <img src="~/assets/img/icon/services1.svg" alt="">
                        </div>
                        <div class="services-cap">
                            <h5><a href="#">Disaster & Emergency Relief</a></h5>
                            <p>Quickly launch campaigns to support urgent needs such as medical crises, natural disasters, or unexpected life events with ease and transparency.</p>
                        </div>
                    </div>
                </div>
                <div class="col-xxl-3 col-xl-4 col-lg-4 col-md-6 col-sm-6">
                    <div class="single-services text-center mb-30">
                        <div class="services-icon">
                            <img src="~/assets/img/icon/services2.svg" alt="">
                        </div>
                        <div class="services-cap">
                            <h5><a href="#">Health & Medical Support</a></h5>
                            <p>Raise funds for surgeries, treatments, and long-term medical care with full transparency and verification mechanisms.</p>
                        </div>
                    </div>
                </div>
                <div class="col-xxl-3 col-xl-4 col-lg-4 col-md-6 col-sm-6">
                    <div class="single-services text-center mb-30">
                        <div class="services-icon">
                            <img src="~/assets/img/icon/services1.svg" alt="">
                        </div>
                        <div class="services-cap">
                            <h5><a href="#">Education & Dreams</a></h5>
                            <p>Help students, innovators, and changemakers secure the financial support they need for tuition, projects, and academic goals.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Our Services End -->
    <!-- Emergency care start -->
    <div class="emargency-care section-img-bg2" data-background="@Url.Content("~/assets/img/gallery/section-bg2.jpg")">
        <div class="container">
            <div class="row justify-content-end">
                <div class="col-xl-6 col-lg-8 col-md-9 col-sm-12">
                    <div class="single-emargency">
                        <div class="emargency-cap">
                            <h5><a href="#">Your Support Can Save Lives</a></h5>
                            <p>FundHive empowers individuals facing emergencies to seek help through verified, time-sensitive campaigns. Every rupee raised matters.</p>
                            <p class="emargenc-cap">From medical emergencies to crisis relief, our platform enables fast action, real-time sharing, and impactful outcomes.</p>
                            <a href="~/Campaign/ApplyForCreator" class="btn loan-btn">Start a Campaign</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Emergency care End -->
    
    <!-- Join with Us Start-->
    <div class="join-us-area section-padding">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-4 col-lg-5 col-md-10">
                    <div class="joing-details">
                        <div class="section-tittle">
                            <h2>Join FundHive Today</h2>
                        </div>
                        <p>Become a part of a growing community committed to transparency, trust, and transformation. Whether you're a donor or a campaign creator — your journey starts here.</p>
                        <a href="/Account/Register" class="btn about-btn">Join Now</a>
                    </div>
                </div>
                <div class="offset-xl-1 col-xl-4 col-lg-4 col-md-7 col-sm-7">
                    <div class="joning-img">
                        <img src="~/assets/img/gallery/joining1.jpg" alt="Join Image 1" class="w-100">
                    </div>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-5 col-sm-5">
                    <div class="joning-img">
                        <img src="~/assets/img/gallery/joining2.jpg" alt="Join Image 2" class="w-100">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Join with Us End-->
</main>

