@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<Crowd_Funding_Platform.Models.Contribution>

@{
    ViewData["Title"] = "Contributors List";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}

<style>
    .search-container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 3px 8px rgba(0, 0, 0, 0.07);
        margin-bottom: 25px;
    }

    .table-wrapper {
        overflow-x: auto;
        max-width: 100%;
    }
    .table-wrapper {
        background: #fff;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
    }

    .custom-table th {
        background-color: #0d6efd;
        color: #ffffff;
        text-align: center;
        vertical-align: middle;
        border: none;
    }

    .custom-table td {
        vertical-align: middle;
        text-align: center;
    }

    .custom-table tbody tr:hover {
        background-color: #f8f9fa;
        transition: background 0.3s ease;
    }

    .badge {
        font-size: 0.85rem;
        padding: 5px 12px;
    }

    .contributor-avatar {
        width: 42px;
        height: 42px;
        object-fit: cover;
        border-radius: 50%;
    }

    .avatar-placeholder {
        width: 42px;
        height: 42px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #6c757d;
        color: white;
        font-weight: bold;
    }
</style>


<div class="export-buttons" style="margin-top: -16px; margin-right: 17px;">
    <a asp-action="ExportContributorsToExcel"
       class="btn btn-outline-success"
       data-bs-toggle="tooltip" data-bs-placement="top" title="Export to Excel"
       style="background-color: #1bcfb4; color: white;">
        <i class="fas fa-file-excel"></i>
    </a>

    <a asp-action="ExportContributorsToPdf"
       asp-route-searchString="@ViewBag.SearchString"
       asp-route-category="@ViewBag.SelectedCategory"
       class="btn btn-outline-danger"
       data-bs-toggle="tooltip" data-bs-placement="top" title="Export to PDF"
       style="background-color: #fe7c96; color: white;">
        <i class="fas fa-file-pdf"></i>
    </a>
</div>

