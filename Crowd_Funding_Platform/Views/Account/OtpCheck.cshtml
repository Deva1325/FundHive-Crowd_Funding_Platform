@model Crowd_Funding_Platform.Models.User

@{
    ViewData["Title"] = "OTP Verification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Otp Verification</h1>


<form id="OtpCheck" method="post">
    <div class="login-logo">
    </div>
    <div class="login-userheading">
        <h3>OTP Verification</h3>
    </div>
    <div class="form-login">
        <label>Email</label>
        <div class="form-addons">
            <input asp-for="Email" value="@Context.Session.GetString("UserEmail")" readonly />
            @*  <input asp-for="Email" value="@Model.Email" readonly /> *@
        </div>
    </div>
    <div class="form-login">
        <label>OTP </label>
        <div class="form-addons">
            <input asp-for="Otp" placeholder="Enter your OTP here">
        </div>
    </div>
    <div class="form-login">
        <p id="timer" style="font-size: 14px; color: gray;">Time remaining: 01:00</p> <!-- Timer Display -->
    </div>
    <div class="form-login">
        <button type="submit" id="btnNext" class="btn btn-login">Next</button>
    </div>
    <div id="resend-section" style="display: none; margin-top: 10px;">
        <button id="resend-btn" class="btn btn-secondary">Resend OTP</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/OtpCheck.js"></script>
}
